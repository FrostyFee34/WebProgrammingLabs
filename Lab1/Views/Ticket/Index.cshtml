@{
    ViewData["Title"] = "Home Page";
}
@model IEnumerable<Lab1.Models.Ticket>

<div class="container p-3">
    @if (Model.Any())
    {
        <table class="table table-bordered table-striped" style="width: 100%">
            <thead>
                <tr>
                    <th scope="col" class="col-4">Passenger name</th>
                    <th scope="col" class="col-4">Route name</th>
                    <th scope="col" class="col-3">Price</th>
                    <th scope="col" class="col-3">Remove a ticket</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td>@obj.PassengerFullName</td>
                    <td>@obj.Route.Name</td>
                    <td>@obj.Price</td>
                    <td class="p-1">
                        <a class="btn btn-danger text-light w-100" asp-controller="Ticket" asp-action="Delete" asp-route-TicketId="@obj.Id">Delete</a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    }
    else
    {
        <p>You don't have any tickets</p>
    }
</div>
