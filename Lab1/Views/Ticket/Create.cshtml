@model Ticket
<form method="post" asp-action="Create">
    <div class="border rounded p-3 border-bold">

        <input asp-for="RailwayRouteId" hidden/>
        <input asp-for="Route" hidden/>


        <div class="form-group row">
            <h2 class="text-dark pl-3">Buy a ticket</h2>
        </div>


        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label class="text-dark font-weight-bold" asp-for="PassengerFullName"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="PassengerFullName" class="form-control shadow-dark"/>
                        <span asp-validation-for="PassengerFullName" class="text-uppercase text-danger"></span>
                    </div>

                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label class="text-dark font-weight-bold" asp-for="Price"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Price" class="form-control shadow-dark"/>
                        <span asp-validation-for="Price" class="text-uppercase text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4 row">
                        <div class="col">
                            <input type="submit" class="btn btn-block bg-white text-dark border-dark w-100" value="Buy"/>
                        </div>
                        <div class="col shadow-dark ">
                            <a asp-action="Index" class="btn btn-block bg-dark text-white  w-100">Cancel</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts
{
    @{
    <partial name="_ValidationScriptsPartial"/>
    }
}